<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="content_closure">
        <item name="android:paddingLeft">@dimen/activity_margin_component</item>
        <item name="android:paddingRight">@dimen/activity_margin_component</item>
        <item name="android:paddingTop">@dimen/activity_margin_nano</item>
        <item name="android:paddingBottom">@dimen/activity_margin_nano</item>
    </style>

    <style name="content_closure_extra">
        <item name="android:paddingLeft">@dimen/activity_margin_sibling</item>
        <item name="android:paddingRight">@dimen/activity_margin_sibling</item>
        <item name="android:paddingTop">@dimen/activity_margin_relative</item>
        <item name="android:paddingBottom">@dimen/activity_margin_relative</item>
    </style>

    <style name="menu_option_style">
        <item name="android:paddingLeft">@dimen/activity_margin_component</item>
        <item name="android:paddingRight">@dimen/activity_margin_component</item>
        <item name="android:paddingBottom">@dimen/activity_margin_relative</item>
        <item name="android:paddingTop">@dimen/activity_margin_relative</item>
        <item name="android:textColor">@color/colorIconsText</item>
        <item name="android:textSize">@dimen/activity_text_gnome</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="exo_custom_full_screen_enter">
        <item name="android:src">@drawable/ic_full_screen_enter</item>
        <item name="android:contentDescription">@string/exo_custom_controls_full_screen_enter_description</item>
    </style>

    <style name="exo_custom_full_screen_exit">
        <item name="android:src">@drawable/ic_full_screen_exit</item>
        <item name="android:contentDescription">@string/exo_custom_controls_full_screen_exit_description</item>
    </style>

</resources>
